<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/zerg_symbol_bg"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text='Ao pesquisar no Google por  \n"Zerg Rush"'
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_orange_dark"
                android:textAlignment="center"
                android:paddingTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="O Google  transforma sua pesquisa e um campo de batalha que simula a estrategias dos Zergs em Starcraft"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_orange_dark"
                android:textAlignment="center"
                android:paddingTop="100dp"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>